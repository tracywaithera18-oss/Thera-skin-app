<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>We Care Wellness ðŸ’œ</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-purple-50 via-pink-50 to-blue-50">

  <!-- App Container -->
  <div id="app"></div>

  <script>
    const app = document.getElementById('app');

    // ----------------------
    // GLOBAL DATA
    // ----------------------
    const affirmations = [
      "You are worthy of love, care, and all the good things life has to offer.",
      "Every small step you take is a victory worth celebrating.",
      "Your journey is uniquely yours, and you're exactly where you need to be.",
      "You have the strength within you to overcome any challenge.",
      "Today, you choose to be kind to yourself and honor your body.",
      "You are not alone. We're here, supporting you every step of the way.",
      "Progress isn't always linear, and that's perfectly okay.",
      "You deserve to feel good in your body and peaceful in your mind."
    ];

    const wellnessTips = [
      { icon: 'sun', title: "Morning Ritual", tip: "Start your day with 5 minutes of gratitude and deep breathing" },
      { icon: 'activity', title: "Gentle Movement", tip: "Your body craves movement, not punishment. Dance, walk, or stretch with joy" },
      { icon: 'leaf', title: "Nourish Mindfully", tip: "Eat slowly, savor each bite, and listen to your body's wisdom" },
      { icon: 'moon', title: "Evening Wind-Down", tip: "Create a sacred bedtime routine that honors your need for rest" }
    ];

    // ----------------------
    // STATE
    // ----------------------
    let state = {
      userName: '',
      onboarded: false,
      active: 'home',
      dailyAffirmation: affirmations[Math.floor(Math.random() * affirmations.length)],
      chat: [],
      journal: '',
      weight: { current: '', target: '', timeline: '' },
    };

    // ----------------------
    // RENDER FUNCTIONS
    // ----------------------
    function render() {
      app.innerHTML = state.onboarded ? renderMainApp() : renderOnboarding();
      lucide.createIcons();
    }

    // Onboarding Screen
    function renderOnboarding() {
      return `
        <div class="min-h-screen flex items-center justify-center p-6">
          <div class="max-w-md w-full bg-white/80 backdrop-blur-sm rounded-3xl shadow-2xl p-8 border border-purple-100 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full mb-4">
              <i data-lucide="heart" class="text-white w-10 h-10"></i>
            </div>
            <h1 class="text-4xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent mb-2">
              We Care Wellness
            </h1>
            <p class="text-gray-600 text-lg mb-6">Your journey to wholeness begins here</p>
            <input id="userNameInput" type="text" placeholder="What should we call you?"
              class="w-full px-4 py-3 rounded-xl border-2 border-purple-200 focus:border-purple-400 focus:outline-none mb-6" />
            <button onclick="startJourney()" class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white py-4 rounded-xl font-semibold hover:from-purple-600 hover:to-pink-600 transition-all transform hover:scale-105 shadow-lg">
              Begin Your Journey
            </button>
            <p class="text-center text-gray-500 text-sm mt-6">A sanctuary of compassion, science, and soul âœ¨</p>
          </div>
        </div>
      `;
    }

    // Main App Layout
    function renderMainApp() {
      return `
        <header class="bg-white/80 backdrop-blur-md border-b border-purple-100 sticky top-0 z-50">
          <div class="max-w-7xl mx-auto px-6 py-4 flex items-center space-x-3">
            <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-400 rounded-full flex items-center justify-center">
              <i data-lucide="heart" class="text-white w-6 h-6"></i>
            </div>
            <div>
              <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                We Care Wellness
              </h1>
              <p class="text-sm text-gray-600">Welcome back, ${state.userName} ðŸ’œ</p>
            </div>
          </div>
        </header>

        <nav class="bg-white/60 backdrop-blur-sm border-b border-purple-100">
          <div class="max-w-7xl mx-auto px-6 flex space-x-2 overflow-x-auto py-2">
            ${['home', 'goals', 'coach', 'journal'].map(id => `
              <button onclick="navigate('${id}')"
                class="flex items-center space-x-2 px-4 py-2 rounded-lg whitespace-nowrap transition-all ${
                  state.active === id
                    ? 'bg-gradient-to-r from-purple-500 to-pink-500 text-white shadow-md'
                    : 'text-gray-600 hover:bg-purple-100'
                }">
                <i data-lucide="${id === 'home' ? 'heart' : id === 'goals' ? 'target' : id === 'coach' ? 'message-circle' : 'book-open'}" class="w-4 h-4"></i>
                <span>${id === 'home' ? 'Home' : id === 'goals' ? 'My Journey' : id === 'coach' ? 'Wellness Coach' : 'Reflection'}</span>
              </button>
            `).join('')}
          </div>
        </nav>

        <main class="max-w-7xl mx-auto px-6 py-8">
          ${renderSection()}
        </main>

        <footer class="bg-white/60 backdrop-blur-sm border-t border-purple-100 mt-12 text-center py-8 text-gray-600">
          <p>You are loved. You are worthy. You are enough. ðŸ’œ</p>
          <p class="text-sm text-gray-500 mt-2">We Care Wellness - Healing Body, Mind, and Spirit</p>
        </footer>
      `;
    }

    function renderSection() {
      if (state.active === 'home') {
        return `
          <div class="space-y-8">
            <div class="bg-gradient-to-r from-purple-400 to-pink-400 rounded-3xl p-8 text-white shadow-2xl">
              <div class="flex items-center justify-center mb-4">
                <i data-lucide="sparkles" class="w-8 h-8"></i>
              </div>
              <h2 class="text-3xl font-bold text-center mb-4">Your Daily Affirmation</h2>
              <p class="text-xl text-center leading-relaxed font-light">
                "${state.dailyAffirmation}"
              </p>
            </div>

            <h2 class="text-2xl font-bold text-gray-800 mb-6">Today's Gentle Guidance</h2>
            <div class="grid md:grid-cols-2 gap-6">
              ${wellnessTips.map(tip => `
                <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-purple-100 hover:shadow-xl transition-shadow">
                  <div class="flex items-start space-x-4">
                    <div class="w-12 h-12 bg-gradient-to-br from-purple-100 to-pink-100 rounded-full flex items-center justify-center text-purple-600">
                      <i data-lucide="${tip.icon}" class="w-5 h-5"></i>
                    </div>
                    <div>
                      <h3 class="font-bold text-gray-800 mb-2">${tip.title}</h3>
                      <p class="text-gray-600">${tip.tip}</p>
                    </div>
                  </div>
                </div>
              `).join('')}
            </div>
          </div>
        `;
      }

      if (state.active === 'coach') {
        return `
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-purple-100 h-[600px] flex flex-col">
            <div class="p-6 border-b border-purple-100">
              <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                <i data-lucide="message-circle" class="w-6 h-6 mr-3 text-purple-600"></i>
                Your Compassionate AI Coach
              </h2>
              <p class="text-gray-600 mt-2">A safe space for any question or emotion</p>
            </div>

            <div id="chatBox" class="flex-1 overflow-y-auto p-6 space-y-4">
              ${state.chat.map(msg => `
                <div class="flex ${msg.sender === 'user' ? 'justify-end' : 'justify-start'}">
                  <div class="max-w-[70%] p-4 rounded-2xl ${
                    msg.sender === 'user'
                      ? 'bg-gradient-to-r from-purple-500 to-pink-500 text-white'
                      : 'bg-purple-50 text-gray-800 border border-purple-100'
                  }">${msg.text}</div>
                </div>
              `).join('')}
            </div>

            <div class="p-6 border-t border-purple-100 flex space-x-3">
              <input id="userMsg" type="text" placeholder="Share what's on your heart..."
                class="flex-1 px-4 py-3 rounded-xl border-2 border-purple-200 focus:border-purple-400 focus:outline-none" 
                onkeypress="if(event.key==='Enter') sendMessage()"/>
              <button onclick="sendMessage()" class="bg-gradient-to-r from-purple-500 to-pink-500 text-white px-6 py-3 rounded-xl font-semibold hover:from-purple-600 hover:to-pink-600 transition-all shadow-lg">
                Send
              </button>
            </div>
          </div>
        `;
      }

      if (state.active === 'journal') {
        return `
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-purple-100">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
              <i data-lucide="book-open" class="w-6 h-6 mr-3 text-purple-600"></i>
              Your Reflection Space
            </h2>
            <textarea id="journalInput" rows="8"
              placeholder="This is your sacred space. Write freely..."
              class="w-full px-4 py-3 rounded-xl border-2 border-purple-200 focus:border-purple-400 focus:outline-none resize-none mb-6">${state.journal}</textarea>
            <button onclick="saveJournal()" class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white py-4 rounded-xl font-semibold hover:from-purple-600 hover:to-pink-600 transition-all shadow-lg">
              Save My Reflection
            </button>
          </div>
        `;
      }

      if (state.active === 'goals') {
        return `
          <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-8 shadow-lg border border-purple-100">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
              <i data-lucide="target" class="w-6 h-6 mr-3 text-purple-600"></i>
              Your Personal Wellness Journey
            </h2>
            <input id="currentWeight" placeholder="Current weight" value="${state.weight.current}" class="w-full px-4 py-3 mb-4 rounded-xl border-2 border-purple-200 focus:border-purple-400 focus:outline-none"/>
            <input id="goalWeight" placeholder="Goal weight" value="${state.weight.target}" class="w-full px-4 py-3 mb-4 rounded-xl border-2 border-purple-200 focus:border-purple-400 focus:outline-none"/>
            <select id="timeline" class="w-full px-4 py-3 rounded-xl border-2 border-purple-200 focus:border-purple-400 focus:outline-none">
              <option value="">Choose your pace</option>
              <option ${state.weight.timeline === '3months' ? 'selected' : ''} value="3months">3 months - Gentle & Sustainable</option>
              <option ${state.weight.timeline === '6months' ? 'selected' : ''} value="6months">6 months - Balanced & Steady</option>
              <option ${state.weight.timeline === '12months' ? 'selected' : ''} value="12months">12 months - Patient & Lasting</option>
            </select>
          </div>
        `;
      }
    }

    // ----------------------
    // EVENT HANDLERS
    // ----------------------
    function startJourney() {
      const input = document.getElementById('userNameInput').value.trim();
      if (!input) return alert('Please enter your name ðŸ’œ');
      state.userName = input;
      state.onboarded = true;
      state.chat.push({ sender: 'coach', text: `Welcome, ${input}! I'm so honored to be part of your wellness journey.` });
      render();
    }

    function navigate(section) {
      state.active = section;
      render();
    }

    function sendMessage() {
      const msgInput = document.getElementById('userMsg');
      const text = msgInput.value.trim();
      if (!text) return;
      msgInput.value = '';
      state.chat.push({ sender: 'user', text });
      setTimeout(() => {
        state.chat.push({ sender: 'coach', text: generateResponse(text) });
        render();
        const chatBox = document.getElementById('chatBox');
        chatBox.scrollTop = chatBox.scrollHeight;
      }, 600);
      render();
    }

    function generateResponse(message) {
      const m = message.toLowerCase();
      if (m.includes('stress') || m.includes('anxious')) return "When stress rises, breathe deeply. You are safe and supported ðŸ’œ";
      if (m.includes('tired') || m.includes('exhausted')) return "Rest is essential for healing. Give yourself permission to slow down ðŸŒ™";
      if (m.includes('weight')) return "Your worth isn't a number. Focus on feeling vibrant and strong ðŸŒ±";
      if (m.includes('motivation')) return "Every step forward counts. Youâ€™re doing beautifully âœ¨";
      return "Thank you for sharing. What would feel most supportive right now? ðŸ’™";
    }

    function saveJournal() {
      state.journal = document.getElementById('journalInput').value;
      alert('Your reflection has been saved ðŸ’«');
    }

    // ----------------------
    // INIT
    // ----------------------
    render();
  </script>
</body>
</html>
